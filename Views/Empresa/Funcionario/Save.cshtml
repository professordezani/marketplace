@model Funcionario
@{
    Layout = "~/Views/Shared/LayoutEmpresa.cshtml";
}
<div class="container">
    <form asp-controller="Funcionario" asp-action="Save" method="POST">
        <h1>Funcion√°rio</h1>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" asp-for="Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="email">E-mail</label>
                <input type="email" class="form-control" id="email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="senha">Senha</label>
                <input type="password" class="form-control" id="senha" asp-for="Senha">
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Salvar</button>        
    </form>
</div>