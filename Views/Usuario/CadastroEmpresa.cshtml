@model CadastroEmpresaView
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="container">
    <form asp-controller="Empresa" asp-action="Create" method="post">
        <div class="form-group">
            <label for="razaoSocial">Raz√£o Social</label>
            <input type="text" class="form-control" id="razaoSocial" asp-for="RazaoSocial">
            <span asp-validation-for="RazaoSocial" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="nomeFantasia">Nome Fantasia</label>
            <input type="text" class="form-control" id="nomeFantasia" asp-for="NomeFantasia">
            <span asp-validation-for="NomeFantasia" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="categoria">Categoria</label>
                <select class="form-control" id="categoria" asp-for="Categoria">
                @foreach (var categoria in Model.Categorias)
                {                   
                    <option value="@categoria.Id">@categoria.Descricao</option>
                }
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="cnpj">CNPJ</label>
                <input type="text" class="form-control" id="cnpj" asp-for="Cnpj">
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="senha">Senha</label>
                <input type="password" class="form-control" id="senha" asp-for="Senha">
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Cadastrar</button>        
    </form> 
</div>

<script>
    $("#cnpj").mask("99.999.999/9999-99");
</script>