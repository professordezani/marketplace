@model Funcionario

<form asp-asp-controller="funcionario" asp-action="update" method="POST">
    <div class="form-group">
        <label for="">Nome</label>
        <input class="form-control" asp-for="Nome">
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group"></div>
        <label for="">E-mail</label>
        <input class="form-control" asp-for="Email">
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group"></div>        
        <label for="">Ativo</label>
        <input class="form-control" asp-for="Ativo">
    </div>

    <div class="form-group"></div>
        <label for="">Principal</label>
        <input class="form-control" asp-for="Principal">
    </div>

    <button class="btn btn-primary">Salvar</button>
    <a class="btn btn-default" href="/funcionario">Voltar</a>
</form>