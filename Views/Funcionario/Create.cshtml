@model Funcionario

<form asp-asp-controller="funcionario" asp-action="create" method="POST">
    <div class="form-group">
        <label for="">Nome</label>
        <input class="form-control" asp-for="Nome">
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group"></div>
        <label for="">E-mail</label>
        <input class="form-control" asp-for="Email">
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group form-check"></div>        
        <input type="checkbox" class="form-check" asp-for="Ativo">        
        <label class="form-check-label" for="ativo">Ativo</label>
    </div>

    <div class="form-group form-check"></div>
        <input type="checkbox" class="form-check" asp-for="Principal">        
        <label class="form-check-label">Principal</label>
    </div>

    <button class="btn btn-primary">Salvar</button>
    <a class="btn btn-default" href="/funcionario">Voltar</a>
</form>