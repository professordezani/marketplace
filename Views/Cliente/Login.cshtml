@model Cliente
@{
    Layout="~/Views/Shared/Layout.cshtml";
}

<form asp-asp-controller="cliente" asp-action="create" method="POST">
        
        <div class="form-group">
            <label for="">E-mail</label>
            <input class="form-control" asp-for="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label for="">Senha</label>
            <input type="password" class="form-control" asp-for="Senha">
            <span asp-validation-for="Senha"></span>
        </div>       

    <button class="btn btn-primary">Criar</button>        
    <a class="btn btn-light" href="/Cliente/Create">Nova Conta</a>        
</form>